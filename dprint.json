{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "indentWidth": 2,
  "lineWidth": 80,
  "newLineKind": "lf",
  "typescript": {
    "semiColons": "asi"
  },
  "markup": {
    "maxAttrsPerLine": 1,
    "component.selfClosing": true
  },
  "sql": {
    "linesBetweenQueries": 3
  },
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/package.json",
    "vscode/*.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.91.6.wasm",
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.2.wasm",
    "https://plugins.dprint.dev/toml-0.6.2.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.9.0.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.11.0.wasm",
    "https://plugins.dprint.dev/sql-0.2.0.wasm"
  ]
}
