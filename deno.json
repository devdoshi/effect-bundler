{
  "unstable": [
    "sloppy-imports"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "jsxImportSource": "solid-js",
    "jsx": "precompile"
  },
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "fmt": {
    "semiColons": false
  },
  "lint": {
    "rules": {
      "exclude": [
        "require-yield",
        "require-await"
      ]
    }
  },
  "workspace": [
    "./lib/solid-router"
  ],
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.1",
    "effect": "npm:effect@^3.10.19",
    "@effect/platform": "npm:@effect/platform@^0.69.30",
    "solid-js": "npm:solid-js@^1.9.3",
    "solid-js/jsx-runtime": "./src/solid-jsx-runtime.ts",
    "solid-router": "./lib/solid-router/",
    "tailwindcss": "npm:tailwindcss@^3.4.15",
    "vite": "npm:vite@^6.0.1",
    "vite-plugin-solid": "npm:vite-plugin-solid@^2.11.0"
  }
}
